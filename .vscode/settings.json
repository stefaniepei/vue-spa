{
  "files.eol": "\n",
  "files.autoSave": "afterDelay", // 多少秒内自动保存
  "editor.formatOnSave": true, // 保存时自动格式化
  "editor.tabSize": 2, // tab相当于2个空格
  "editor.detectIndentation": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "prettier.requireConfig": true, 
  "vetur.format.defaultFormatter.css": "prettier", 
  "vetur.format.defaultFormatter.postcss": "prettier", 
  "vetur.format.defaultFormatter.scss": "prettier", 
  "vetur.format.defaultFormatter.less": "prettier", 
  "vetur.format.defaultFormatter.js": "prettier", 
  "vetur.format.defaultFormatter.ts": "prettier", 
  "vetur.grammar.customBlocks": { "docs": "md", "i18n": "json", "style": "postcss", }, 
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "wrap_attributes": "force-aligned" //属性强制折行对齐
    }
  },
  "javascript.implicitProjectConfig.experimentalDecorators": true, //装饰器错误提示
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "prettier.trailingComma": "all",
  // "tslint.enable": true,
  // "tslint.configFile": "tslint.json",
  // "tslint.autoFixOnSave": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "never",

  "emmet.triggerExpansionOnTab": true,// Tab键
  "emmet.syntaxProfiles": { // code缩写
    "javascript": "html",
    "tsx": "html",
    "ts": "html",
    "jsx": "html",
    "js": "html",
    "vue": "html",
  },
  
  "eslint.enable": true, // 开启eslint
  "eslint.autoFixOnSave": true, // 保存时自动格式化
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    },
    // "html",
    // "jsx",
    // "js",
    // "vue",
    // "typescript", 
    // "typescriptreact",
    // "tsx",
    // "ts",
  ],
  "eslint.options": {
    "plugins": [
      "html"
    ],
    "configFile": ".eslintrc.js"
  },

}
